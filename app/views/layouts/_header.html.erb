<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path %></li>
        <li><%= link_to t(".help"), help_path %></li>
        <% if logged_in? %>
            <li><%= link_to t(".user"), users_path, class: "nav-link" %></li>
            <li class="dropdown">
              <%= link_to t(".link_dropdown_html"), "#", "data-toggle" => "dropdown" %>
              <ul class="dropdown-menu">
                <li><%= link_to t(".profile"), current_user %></li>
                <li><%= link_to t(".setting"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t(".logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
        <% else %>
          <li class = "nav-item"><%= link_to t(".login"), login_path, class: "nav-link" %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-left">
        <%= I18n.available_locales.each do |item| %>
          <li><%= link_to t("layouts.header.#{item}"), locale: item %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
